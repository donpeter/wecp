{
  "env": {
    "browser": false,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "prefer-const": "error",
    "eqeqeq": "error",
    "no-invalid-this": "warn",
    "no-unused-vars": "warn",
    "new-cap": "warn",
    "one-var": "off",
    "no-mixed-requires": "error",
    "no-undef": "error",
    "no-extra-semi": "error"
  }
}